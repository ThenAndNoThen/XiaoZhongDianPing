<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context=".ui.main.MainActivity"
    android:orientation="vertical">



        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_mainActivity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </android.support.v4.view.ViewPager>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout_mainActivity"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabSelectedTextColor="@color/colorAccent">

        </android.support.design.widget.TabLayout>

        <!--底部按钮栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <!--商家-->
                <LinearLayout
                    android:id="@+id/layoutStore_mainActivity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgStore_mainActivity"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/ic_home_white_24dp" />

                    <TextView
                        android:id="@+id/tvStore_mainActivity"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:gravity="center"
                        android:text="商家"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <!--订单-->
                <LinearLayout
                    android:id="@+id/layoutOrder_mainActivity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgOrder_mainActivity"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/ic_content_paste_white_24dp" />

                    <TextView
                        android:id="@+id/tvOrder_mainActivity"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:gravity="center"
                        android:text="订单"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <!--我-->
                <LinearLayout
                    android:id="@+id/layoutMine_mainActivity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgMine_mainActivity"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/ic_person_white_24dp" />

                    <TextView
                        android:id="@+id/tvMine_mainActivity"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:gravity="center"
                        android:text="我的"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
